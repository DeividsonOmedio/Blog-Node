<h3>Editar Postagem</h3>

{{#if erros}}
    {{#each erros}}
        <div class="alert alert-danger" role="alert">
            {{texto}}
        </div>
    {{/each}}
{{/if}}

{{#if postagem}}
<form action="/admin/postagens/edit" method="post">
    <input type="hidden" name="id" value="{{postagem._id}}">
    <div class="mb-3">
        <label for="InputTitulo" class="form-label">Título</label>
        <input type="text" class="form-control" id="InputTitulo" name="titulo" aria-describedby="tituloHelp" value="{{postagem.titulo}}">
        <div id="tituloHelp" class="form-text"></div>
    </div>
    <div class="mb-3">
        <label for="InputSlug" class="form-label">Slug</label>
        <input type="text" class="form-control" id="InputSlug" name="slug"  value="{{postagem.slug}}">
    </div>
    <div class="mb-3">
        <label for="InputDescricao" class="form-label">Descrição</label>
        <textarea class="form-control" id="InputDescricao" name="descricao" >{{postagem.descricao}}</textarea>
    </div>
    <div class="mb-3">
        <label for="InputConteudo" class="form-label">Conteúdo</label>
        <textarea class="form-control" id="InputConteudo" name="conteudo" >{{postagem.conteudo}}</textarea>
    </div>
    <div class="mb-3">
        <label for="InputCategoria" class="form-label">Categoria</label>
        <select class="form-select" id="InputCategoria" name="categoria" >
            {{#each categorias}}
                <option value="{{_id}}" {{#if (eq _id ../postagem.categoria)}}selected{{/if}}>{{nome}}</option>
            {{/each}}
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Confirmar Alterações</button>
</form>

{{/if}}
